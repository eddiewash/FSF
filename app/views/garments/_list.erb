<ul class="thumbnails">
  <% @garments.each do |garment| %>
  <li class="span3" style="margin:0; padding:5px;">
    <h3><%= garment.name %></h3>
    <div class="thumbnail">
      <%= link_to image_tag(garment.image), garment %>
      <h4><%= garment.description %></h4>
    </div>
  </li>
  <% end %>
</ul>