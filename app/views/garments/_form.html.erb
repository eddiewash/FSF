<%= form_for @garment, :url => garments_path, :html => { :multipart => true } do |f| %>
  <fieldset>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description, :cols => "20", :rows => "4" %>
<%= f.text_area :description, :cols => "20", :rows => "4" %>
<%= f.label :editorial, :cols => "20", :rows => "4" %>
<%= f.text_area :editorial, :cols => "20", :rows => "4" %>
<%= f.label "Shipping date" %>
<%= f.text_field :date %>
<%= f.label :image %>
<%= f.file_field :image %>
<%= f.submit class: 'btn'%>
  </fieldset>
<% end %>